<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic_curtains"
    tools:context="porker.steven.com.a2018iotapp3.curtainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="3.3"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_height="match_parent">
            <TextView
                android:text="窗帘控制开关"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbCurtain"
                android:layout_width="wrap_content"
                android:background="@drawable/check_button"
                android:button="@null"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/activity_include_title"/>
    <ImageView
        android:id="@+id/ivOffCurtain"
        android:layout_width="750dp"
        android:layout_marginLeft="143dp"
        android:layout_marginStart="143dp"
        android:visibility="gone"
        android:background="@drawable/curtain_off_anim"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_height="480dp" />
    <ImageView
        android:id="@+id/ivOnCurtain"
        android:layout_width="750dp"
        android:layout_marginLeft="143dp"
        android:layout_marginStart="143dp"
        android:visibility="gone"
        android:background="@drawable/curtain_on_anim"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_height="480dp" />

</RelativeLayout>
